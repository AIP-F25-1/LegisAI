# === Llama via OpenAI-compatible API ===
OPENAI_API_KEY=ollama                         # or your hosted key
OPENAI_BASE_URL=http://localhost:11434/v1     # Ollama default; or OpenRouter/Together/Groq URL
OPENAI_MODEL=llama3.1:8b-instruct             # For Ollama; for hosted: meta-llama/llama-3.1-70b-instruct
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=2048

# === Embeddings / Vector store ===
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_DIR=./vectorstore

# === DB (unused in MVP but ready) ===
DB_URL=sqlite:///db.sqlite3

# === CORS for frontend ===
CORS_ORIGINS=*
